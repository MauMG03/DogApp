<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/date_item_background"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Imagen circular de la mascota -->
    <ImageView
        android:id="@+id/image_pet"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@drawable/circle_background"
        android:layout_marginEnd="16dp"
        android:contentDescription="Mascota"/>

    <!-- Contenedor vertical para el nombre, descripción y turno -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_pet"
        android:orientation="vertical">

        <!-- Nombre de la mascota -->
        <TextView
            android:id="@+id/text_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la mascota"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Descripción del síntoma -->
        <TextView
            android:id="@+id/text_symptom_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del síntoma"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <!-- Turno de atención -->
    <TextView
        android:id="@+id/text_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="#1"
        android:textSize="12sp" />

</RelativeLayout>
